<Window x:Class="ScoutingCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoutingCenter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF9D00" Offset="0.848"/>
                <GradientStop Color="#FF1CE500" Offset="0.048"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="connectButton"  Content="Connect to Devices" HorizontalAlignment="Center" Margin="0,0,400,0" VerticalAlignment="Top" Height="200" Width="200" Click="connectToDevicesForButton" FontSize="16"/>
        <Button x:Name="readButton" Content="Read from Buffer" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="200" Click="readFromBufferForButton" FontSize="16"/>
        <Button x:Name="writeButton" Content="Write to Sream" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="200" Margin="400,0,0,0" Click="writeToStreamForButton" FontSize="16"/>

    </Grid>
</Window>
